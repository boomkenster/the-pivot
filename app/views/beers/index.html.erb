<div class="container">
  <%= render :partial => 'layouts/user_header.html.erb' %>
  <%= render :partial => 'layouts/sitewide_header.html.erb' %>

  <div class="row">
    <div class="columns four">
      <h1>Beer List</h1>
    <ul class="beerlist">
    <% @categories.each do |category| %>
      <li class="<%= category.name %>"><%= category.name %></li>
    <% end %>
    </ul>
    
    </div>
    <div class="columns eight">
      <img class="beerbottle" src="<%= image_path("bottle.png")%>">
    </div>
  </div>


  <% @beers.each_with_index do |beer, index| %>
    <% if (index + 1) % 6 == 0 %>
      <div class="row beer_row">
    <% end %>

    <% beer.categories.each do |cat| %>
      <% @cat_class = cat.name %>
    <% end %>

    <div class="columns two <%= @cat_class %> beer">
      <h6><%= link_to beer.name, beer_path(beer) %> </h6>
      <%= image_tag beer.attachment.url, class:"individual_beer" %>
    </div>

    <% if (index + 1) % 6 == 0 %>
    </div><!--row-->
    <% end %>
  <% end %>
</div>
