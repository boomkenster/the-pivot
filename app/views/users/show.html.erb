<div class="container">

  <% if current_user.display_name.blank? %>
    <h1>Welcome, <%= current_user.fullname %>!</h1>
  <% else %>
    <h1>Welcome, <%= current_user.display_name %>!</h1>
  <% end %>

  <div class="row">
    <div class="col-md-2">
      <%= image_tag current_user.avatar.url %>
    </div>

    <div class="eight columns">
      <ul>
        <li><%= link_to "Edit Profile", edit_users_path(@user) %></li>
        <li><%= link_to "Past Orders", orders_path %></li>
      </ul>
    </div>
    
    <table class="table-condensed">
      <tr>
        <th>Item</th>
        <th>Your Bid </th>
        <th>Time Remaining</th>
        <th>Highest Bid</th>
        <th>Re-bid!</th>
      </tr>
      
      <% current_user.bids.each do |bid| %>
      <div>
      <tr>
        <td><%= bid.item.name %> </td>
        <td><%= number_to_currency(bid.current_price) %> </td>
        <td><%= distance_of_time_in_words(Time.now, bid.item.expiration_date) %> </td>
        <td> <%= number_to_currency(bid.item.highest_bid) %> </td>
        
        <% if bid.current_price < bid.item.highest_bid %>
    
            <td> <%= form_for(:bid, url: bid_path(bid), method: :patch) do |f| %>
              <%= f.number_field :current_price, value: bid.item.highest_bid + 1.00, :id => "bid-input" %>
              <%= f.label :minimum_bid, :id => 'minimum-bid' %>
              <%= f.hidden_field :item_id, value: bid.item.id %>
              <%= f.hidden_field :user_id, value: current_user.id %>
              <%= f.submit "Bid"%> </td>
              <% end %>
            <% else %>
              <td>You're the highest bidder!</td>
            <% end %>
        <% end %>
      </tr>
    </table>
    </div>
    
  </div>

</div>

      
