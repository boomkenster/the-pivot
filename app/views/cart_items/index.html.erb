<div class="container">
  <%= render :partial => 'layouts/user_header.html.erb' %>
  <%= render :partial => 'layouts/sitewide_header.html.erb' %>

  <h1>Shopping cart</h1>
  <div class="stitched">
    <table>

      <tr>
        <th>Item</th>
        <th>Item Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Remove</th>
      </tr>

      <tr>
        <% @cart.contents.each do |k,v| %>

          <td><%= @cart.find_item(v).name %></td>
          <td><%= number_to_currency(@cart.find_item(v).starting_price) %></td>
          <td>
            <%= link_to "remove item", cart_item_path(@cart, "item" => {item_id: v}), method: "delete" %>
          </td>
          <td>
            
        <% if current_user %>
          <%= button_to "Bid", orders_path( :order_info => {total: @cart.find_item(v).starting_price, user_id: current_user.id, beers: @cart.contents}) %>
        <% else %>
           <%= link_to "Please log in to checkout.", login_path %>
        <% end %>
          </td>
        </tr>
        <% end %>
      

    </table>

  </div>
  <br/>

  <h4> Total Items: <%= @cart.contents.count %></h4>

</div>
